<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_margin="5dp"
    app:cardBackgroundColor="@color/main_bg"
    app:cardCornerRadius="12dp"
    app:cardElevation="3dp"
    app:contentPadding="4dp"

    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <ImageView
            android:id="@+id/item_image"
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/item_title"
            android:layout_width="236dp"
            android:layout_height="40dp"
            app:layout_constraintLeft_toRightOf="@+id/item_image"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="18dp"
            android:textStyle="bold"
            android:textSize="30sp"
            android:gravity="center_vertical"
            />
        <TextView
            android:id="@+id/item_connect"
            android:layout_width="118dp"
            android:layout_height="20dp"
            app:layout_constraintLeft_toRightOf="@+id/item_image"
            app:layout_constraintTop_toBottomOf="@+id/item_title"
            android:layout_marginStart="18dp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/item_connect_state"
            android:layout_width="105dp"
            android:layout_height="20dp"
            android:textStyle="bold"
            app:layout_constraintLeft_toRightOf="@+id/item_connect"
            app:layout_constraintTop_toBottomOf="@+id/item_title"
            android:textColor="@color/green"
            />
        <Button
            android:id="@+id/item_connect_button"
            android:layout_width="236dp"
            android:layout_height="40dp"
            app:layout_constraintTop_toBottomOf="@+id/item_connect"
            app:layout_constraintLeft_toRightOf="@+id/item_image"
            android:layout_marginStart="18dp"
            android:text="Connect"
            android:textColor="@color/button_icon_light"/>




    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.cardview.widget.CardView>